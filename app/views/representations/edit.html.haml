%h1 Editing representation

= flash_message

= render @representation

- if @latex_representation
  = simple_form_for([@sym, @latex_representation], validate: true) do |f|
    = f.error_notification
    = render 'latex_representation_form', :f => f

- if @unicode_representation
  = simple_form_for([@sym, @unicode_representation], validate: true) do |f|
    = f.error_notification
    = render 'unicode_representation_form', :f => f

= link_to 'Back', sym_representations_path(@sym)
