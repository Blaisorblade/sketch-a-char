%h1 Editing representation

- if @latex_representation
  = semantic_form_for([@sym, @latex_representation], html: {multipart: true}) do |f|
    = f.semantic_errors
    = render 'latex_representation_form', :f => f

- if @unicode_representation
  = semantic_form_for([@sym, @unicode_representation]) do |f|
    = f.semantic_errors
    = render 'unicode_representation_form', :f => f

= link_to 'Show', [@sym, @latex_representation || @unicode_representation]
|
= link_to 'Back', sym_representations_path(@sym)
