!!! 5
%html
  %head
    %title Sketch-A-Char
    = stylesheet_link_tag :all
    = javascript_include_tag :defaults
    = javascript_include_tag 'underscore-min.js'
    = javascript_include_tag 'underscore-mixins.js'
    = javascript_include_tag 'backbone-min.js'
    = javascript_include_tag 'raphael-min.js'
    = javascript_include_tag 'jquery.mustache.js'
    = javascript_include_tag 'jquery.raphael.canvassify.js'
    = csrf_meta_tag
  %body
    %small
      - if signed_in?
        Signed in as
        = current_user.name
      - else
        = link_to 'Login', login_path
    = yield